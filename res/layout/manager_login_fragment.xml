<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/manager_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manager_login_text" />

    <TextView
        android:id="@+id/manager_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manager_id_text" />

    <EditText
        android:id="@+id/manager_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/manager_passw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manager_passw_text" />

    <EditText
        android:id="@+id/manager_passw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

</LinearLayout>
